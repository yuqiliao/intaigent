<section class="py-16 relative">
    <div aria-hidden="true" class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40">
        <div class="blur-[106px] h-56 bg-gradient-to-br from-white via-blue-400 to-green-400"></div>
        <div class="blur-[106px] h-32 bg-gradient-to-r from-white via-purple-200 to-blue-400"></div>
