<script is:inline>
  let isHindiOnTop = false;
  
  const englishCard = document.getElementById('english-card');
  const hindiCard = document.getElementById('hindi-card');
  const instructionHint = document.querySelector('.instruction-hint');
  
  function toggleCards() {
    if (!isHindiOnTop) {
      // Bring Hindi to front
      hindiCard.style.transform = 'translateX(0)';
      hindiCard.style.zIndex = '10';
      englishCard.style.transform = 'translateX(40%) scale(0.98)';
      englishCard.style.zIndex = '5';
    } else {
      // Bring English to front
      englishCard.style.transform = 'translateX(0)';
      englishCard.style.zIndex = '10';
      hindiCard.style.transform = 'translateX(40%) scale(0.98)';
      hindiCard.style.zIndex = '5';
    }
    
    isHindiOnTop = !isHindiOnTop;
    
    // Hide instruction after first click
    instructionHint.style.opacity = '0';
    setTimeout(() => {
      instructionHint.style.display = 'none';
    }, 500);
  }
  
  englishCard.addEventListener('click', toggleCards);
  hindiCard.addEventListener('click', toggleCards);
</script>