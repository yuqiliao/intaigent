                    {/* Notch */}
                    <div class="absolute top-2 left-1/2 transform -translate-x-1/2 w-20 h-3 bg-gray-800 rounded-full z-20"></div>
                    
                    {/* Video */}
                    <video 
                      src="/images/agriconnect/Demo_English.mp4" 
                      class="w-full h-full object-cover phone-video english-video"
