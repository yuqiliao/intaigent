<script is:inline>
  let isBengaliOnTop = false;
  
  const englishCard = document.getElementById('english-card');
  const bengaliCard = document.getElementById('hindi-card');
  const instructionHint = document.querySelector('.instruction-hint');
  
  function toggleCards() {
    if (!isBengaliOnTop) {
      // Bring Bengali to front
      bengaliCard.style.transform = 'translateX(0)';
      bengaliCard.style.zIndex = '10';
      englishCard.style.transform = 'translateX(35%) scale(0.98)';
      englishCard.style.zIndex = '5';
    } else {
      // Bring English to front
      englishCard.style.transform = 'translateX(0)';
      englishCard.style.zIndex = '10';
      bengaliCard.style.transform = 'translateX(40%) scale(0.98)';
      bengaliCard.style.zIndex = '5';
    }
    
    isBengaliOnTop = !isBengaliOnTop;
    
    // Hide instruction after first click
    instructionHint.style.opacity = '0';
    setTimeout(() => {
      instructionHint.style.display = 'none';
    }, 500);
  }
  
  englishCard.addEventListener('click', toggleCards);
  bengaliCard.addEventListener('click', toggleCards);
</script>