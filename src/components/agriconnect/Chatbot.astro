                    {/* Additional overlay to cover any side lines */}
                    <div class="absolute top-0 left-0 w-[2%] h-[15%] bg-white z-10" style="z-index: 16;"></div>
                    <div class="absolute top-0 right-0 w-[2%] h-[15%] bg-white z-10" style="z-index: 16;"></div>
                    
                    {/* Language label - moved to top right */}
                    <div class="absolute top-4 right-4 bg-white/90 px-3 py-1.5 rounded-full text-sm font-medium z-20 shadow-sm">
                      English
                    </div>
                  </div>
                </div>
              </div>
            </div>

            {/* Bengali Card */}
            <div id="hindi-card"
                 class="absolute inset-0 transition-all duration-500 cursor-pointer"
                 style="transform: translateX(35%) scale(0.98); z-index: 5;">
              <div class="relative w-full h-full mx-auto phone-container">
                {/* Phone container with modern white border */}
                <div class="w-full h-full bg-gradient-to-br from-white via-gray-50 to-gray-100 rounded-[32px] p-1 shadow-[0_20px_40px_rgba(0,0,0,0.08),0_8px_16px_rgba(0,0,0,0.04),inset_0_1px_0_rgba(255,255,255,0.8)] transition-shadow duration-300 hover:shadow-[0_25px_50px_rgba(0,0,0,0.12),0_10px_20px_rgba(0,0,0,0.06),inset_0_1px_0_rgba(255,255,255,0.8)]">
                  {/* Screen area */}
                  <div class="relative w-full h-full rounded-[28px] overflow-hidden shadow-inner bg-white">
                    {/* Notch */}
                    <div class="absolute top-2 left-1/2 transform -translate-x-1/2 w-20 h-3 bg-gray-800 rounded-full z-20"></div>
                    
                    {/* Video */}
                    <video 
                      src="/images/agriconnect/Demo_Bengali.mp4" 
                      class="w-full h-full object-cover phone-video bengali-video"
                      style="object-position: center; filter: brightness(1.05) contrast(1.15); object-fit: cover;"
                      autoplay
                      loop
                      muted
                      playsinline
                      aria-label="Chatbot Demo in Bengali"
                    ></video>
                    
                    {/* White overlay to hide header text, red shape, and any lines - extends slightly to cover edges */}
                    <div class="absolute top-0 left-0 right-0 h-[15%] bg-white z-10" style="z-index: 15; border-radius: 28px 28px 0 0;"></div>
                    {/* Additional overlay to cover any side lines */}
                    <div class="absolute top-0 left-0 w-[2%] h-[15%] bg-white z-10" style="z-index: 16;"></div>
                    <div class="absolute top-0 right-0 w-[2%] h-[15%] bg-white z-10" style="z-index: 16;"></div>
                    
                    {/* Language label - moved to top right */}
                    <div class="absolute top-4 right-4 bg-white/90 px-3 py-1.5 rounded-full text-sm font-medium z-20 shadow-sm">
                      Bengali
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Right side - Key Features */}
      <div class="w-full md:w-[52%] lg:w-[55%] mt-12 md:mt-0">
        <h2 class="text-2xl font-bold mb-8">Key Features</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <div class="bg-white p-6 rounded-xl shadow-md">
            <div class="w-14 h-14 rounded-full bg-[#009688] bg-opacity-10 flex items-center justify-center mb-4">
              <img src="/images/icons/globe-icon.svg" alt="Multi-lingual" class="w-8 h-8" style="filter: brightness(0) saturate(100%);">
            </div>
            <h3 class="font-semibold text-lg mb-2">Multi-lingual</h3>
            <p class="text-gray-600">Support in various languages</p>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-md">
            <div class="w-14 h-14 rounded-full bg-[#9C27B0] bg-opacity-10 flex items-center justify-center mb-4">
              <img src="/images/icons/microphone-icon.svg" alt="Multi-modal" class="w-8 h-8" style="filter: brightness(0) saturate(100%);">
            </div>
            <h3 class="font-semibold text-lg mb-2">Multi-modal</h3>
            <p class="text-gray-600">Text, voice, and image interactions</p>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-md">
            <div class="w-14 h-14 rounded-full bg-[#31aae2] bg-opacity-10 flex items-center justify-center mb-4">
              <img src="/images/icons/chat-icon.svg" alt="Multi-platform" class="w-8 h-8" style="filter: brightness(0) saturate(100%);">
            </div>
            <h3 class="font-semibold text-lg mb-2">Multi-platform</h3>
            <p class="text-gray-600">Works with WhatsApp, Telegram, WeChat, Line, and iMessage</p>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-md">
            <div class="w-14 h-14 rounded-full bg-[#FF9800] bg-opacity-10 flex items-center justify-center mb-4">
              <img src="/images/icons/clock-icon.svg" alt="Always Available" class="w-8 h-8" style="filter: brightness(0) saturate(100%);">
            </div>
            <h3 class="font-semibold text-lg mb-2">Always Available</h3>
            <p class="text-gray-600">24/7 support for farmers</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .instruction-hint {
    animation: float 2s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(-8px); }
  }

  .instruction-hint {
    transition: opacity 0.3s ease-in-out;
  }

  .phone-container {
    max-width: 280px;
  }

  @media (min-width: 768px) {
    .phone-container {
      max-width: 300px;
    }
  }

  @media (min-width: 1024px) {
    .phone-container {
      max-width: 320px;
    }
  }

  .phone-video {
    display: block;
    border-radius: 28px;
  }

  .english-video {
    border-radius: 28px;
    transform: scale(1.01);
    margin: 0;
  }

  .bengali-video {
    border-radius: 28px;
    transform: scale(1.01);
    margin: 0;
  }
</style>

<script is:inline>
  let isBengaliOnTop = false;
  
  const englishCard = document.getElementById('english-card');
  const bengaliCard = document.getElementById('hindi-card');
  const instructionHint = document.querySelector('.instruction-hint');
  
  function toggleCards() {
    if (!isBengaliOnTop) {
      // Bring Bengali to front
      bengaliCard.style.transform = 'translateX(0)';
      bengaliCard.style.zIndex = '10';
      englishCard.style.transform = 'translateX(35%) scale(0.98)';
      englishCard.style.zIndex = '5';
    } else {
      // Bring English to front
      englishCard.style.transform = 'translateX(0)';
      englishCard.style.zIndex = '10';
      bengaliCard.style.transform = 'translateX(40%) scale(0.98)';
      bengaliCard.style.zIndex = '5';
    }
    
    isBengaliOnTop = !isBengaliOnTop;
  }
  
  englishCard.addEventListener('click', toggleCards);
  bengaliCard.addEventListener('click', toggleCards);
</script>