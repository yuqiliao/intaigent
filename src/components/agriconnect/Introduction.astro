  }
  .icon-constellation.is-visible .icon-wrapper:nth-child(2) {
    animation: fadeInScale 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.2s backwards;
  }
  .icon-constellation.is-visible .icon-wrapper:nth-child(3) {
    animation: fadeInScale 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.3s backwards;
  }
  .icon-constellation.is-visible .icon-wrapper:nth-child(4) {
    animation: fadeInScale 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.4s backwards;
  }
  .icon-constellation.is-visible .icon-wrapper:nth-child(5) {
    animation: fadeInScale 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.5s backwards;
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.9) translateY(10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
