  /* Icon wrapper to contain card and label */
  .icon-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  /* Floating animation for icons */
  .icon-wrapper:nth-child(1) .icon-card {
    animation: iconFloat 4s ease-in-out infinite;
    animation-delay: 0s;
  }

  .icon-wrapper:nth-child(2) .icon-card {
    animation: iconFloat 4s ease-in-out infinite;
